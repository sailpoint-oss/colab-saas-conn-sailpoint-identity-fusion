{
    "name": "identity-fusion",
    "version": "2.0.0",
    "main": "dist/index.js",
    "scripts": {
        "clean": "shx rm -rf ./dist",
        "prebuild": "npm run clean",
        "build": "npx ncc build ./src/index.ts -o ./dist -m -C",
        "start": "spcx run dist/index.js $PORT",
        "debug": "spcx run dist/index.js",
        "proxy": "concurrently \"spcx run dist/index.js\" \"wait-on tcp:3000 && npx tmole 3000\"",
        "mole": "npx tmole 3000",
        "dev": "cross-env NODE_OPTIONS=--enable-source-maps spcx run dist/index.js",
        "prettier": "npx prettier --write .",
        "prepack-zip": "npm ci && npm run build",
        "pack-zip": "spcx package",
        "test": "jest --passWithNoTests"
    },
    "private": true,
    "dependencies": {
        "@sailpoint/connector-sdk": "1.1.38",
        "sailpoint-api-client": "1.7.1",
        "any-date-parser": "^2.2.3",
        "axios": "^1.6.8",
        "axios-retry": "^4.5.0",
        "double-metaphone": "^2.0.1",
        "form-data": "^4.0.1",
        "handlebars": "^4.7.8",
        "identity-fusion": "file:",
        "libphonenumber-js": "^1.12.34",
        "parse-address-string": "^0.0.3",
        "transliteration": "^2.3.5",
        "uuid": "^9.0.1",
        "velocityjs": "^2.0.6"
    },
    "devDependencies": {
        "@babel/core": "^7.28.6",
        "airtable": "^0.12.2",
        "@babel/preset-env": "^7.28.6",
        "@eslint/js": "^9.9.0",
        "@types/jest": "^29.5.14",
        "@types/node": "^20.11.17",
        "@types/uuid": "^9.0.8",
        "@vercel/ncc": "^0.38.1",
        "babel-jest": "^30.2.0",
        "concurrently": "^9.2.1",
        "cross-env": "7.0.3",
        "dotenv": "^16.6.1",
        "eslint": "^9.9.0",
        "globals": "^15.9.0",
        "jest": "^30.2.0",
        "prettier": "^3.2.5",
        "shx": "^0.4.0",
        "ts-jest": "^29.4.6",
        "tunnelmole": "^2.4.0",
        "typescript": "^5.3.3",
        "typescript-eslint": "^8.2.0",
        "wait-on": "^9.0.3"
    },
    "prettier": {
        "printWidth": 120,
        "trailingComma": "es5",
        "tabWidth": 4,
        "semi": false,
        "singleQuote": true
    }
}
